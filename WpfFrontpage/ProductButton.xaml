<UserControl x:Class="WpfFrontpage.ProductButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfFrontpage"
             mc:Ignorable="d" Height="351" Width="263">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="274*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <Image x:Name="ImageProduct" Margin="0,0,0,1" Source="sample.png" Stretch="Fill"/>
        <TextBlock x:Name="txkName"  Margin="0" Grid.Row="1" FontSize="20" />
        <TextBlock x:Name="txkPrice" Margin="0" Grid.Row="2" FontSize="20" />
    </Grid>
</UserControl>
