             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfMarketing"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" Loaded="UserControl_Loaded">

    <Grid>
        <Image x:Name="ButtonImage" Stretch="Fill" />
        <Button x:Name="btnMain" Content="GO" Margin="0,0,-0.377,-0.377" Click="btnMain_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="25" Width="29"/>
        <TextBlock x:Name="txkTitle" Margin="0,0,-0.377,76.623" FontSize="36" TextAlignment="Center"/>
