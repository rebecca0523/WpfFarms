<Window x:Class="WpfMarketing.WindowSalEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMarketing"
        mc:Ignorable="d"
        Title="WindowSalEvent" Height="600" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <DataTemplate x:Key="SEDataTemplate">
            <DockPanel>
                <TextBox Text="{Binding SaleEventTitle,Mode=OneWay}" DockPanel.Dock="Left" Margin="20,0,0,0" HorizontalContentAlignment="Left" Width="100" />
                <DatePicker SelectedDate="{Binding SaleEventStar,Mode=OneWay}" DockPanel.Dock="Left" HorizontalContentAlignment="Left"/>
                <DatePicker SelectedDate="{Binding SaleEventEnd,Mode=OneWay}" DockPanel.Dock="Left" HorizontalContentAlignment="Left" />
            </DockPanel>
        </DataTemplate>
        <DataTemplate x:Key="SEQuotaTemplate">
            <DockPanel>
                <TextBlock Text="{Binding Quota,Mode=OneWay}" />
                <TextBlock Text="{Binding Discount,Mode=OneWay}"/>

            </DockPanel>
        </DataTemplate>

    </Window.Resources>
    <Grid>
        <Canvas Margin="0">
            <StackPanel Height="549" Canvas.Left="10" Canvas.Top="10" Width="320" Background="#FFFFE1E1">
                <TextBlock TextWrapping="Wrap" Text="建立特賣活動" Height="17.822" Margin="0,1,0,0"/>
                <ListBox x:Name="lstSaleEvent" VerticalContentAlignment="Top" Height="490" ItemTemplate="{DynamicResource SEDataTemplate}" SelectionChanged="lstSaleEvent_SelectionChanged"/>
            </StackPanel>

            <UniformGrid Columns="3" Canvas.Left="330" Canvas.Top="187">
                <StackPanel Height="339" Canvas.Left="337" Canvas.Top="178" Width="148" Background="#FFF8FFCD">
                    <TextBlock TextWrapping="Wrap" Text="滿額折扣" Margin="0,0,10,0"/>
                    <ListBox x:Name="lstSaleEventQuota" ItemTemplate="{DynamicResource SEQuotaTemplate}" Margin="0" Height="324"/>
                </StackPanel>
                <StackPanel Height="339" Canvas.Left="490" Canvas.Top="178" Background="#FFD0FBBF">
                    <TextBlock TextWrapping="Wrap" Text="單品折扣" Margin="0,0,10,0"/>
                </StackPanel>
                <StackPanel Height="339" Background="#FFC1F6FB">
                    <TextBlock TextWrapping="Wrap" Text="組合折扣" Margin="0,0,10,0"/>
                </StackPanel>
            </UniformGrid>
            <DataGrid x:Name="dtgTemp" Height="152" Canvas.Left="623" Canvas.Top="21" Width="159" RenderTransformOrigin="0.51,-0.09"/>
            <TextBox x:Name="txtSEContent" Height="152" Canvas.Left="337" TextWrapping="Wrap" Text="TextBox" Canvas.Top="21" Width="281" Background="#FFF5DAB9"/>
            <Button Content="儲存" Canvas.Left="656" Canvas.Top="531" Width="126" Height="28" Background="#FFF0D5F1"/>


        </Canvas>

    </Grid>
</Window>
