<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFarmsSupplier"
        xmlns:AllData="clr-namespace:AllData;assembly=AllData" x:Class="WpfFarmsSupplier.SuppliersVedioCRUDMulti"
        mc:Ignorable="d"
        Title="SuppliersVedioCRUDMulti" Height="800" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="suppliersVideoViewSource" d:DesignSource="{d:DesignInstance {x:Type AllData:SuppliersVideo}, CreateList=True}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource suppliersVideoViewSource}">

        <DataGrid x:Name="suppliersVideoDataGrid" RowDetailsVisibilityMode="VisibleWhenSelected" Margin="15,24,40,588" ItemsSource="{Binding}" EnableRowVirtualization="True" AutoGenerateColumns="False">
            <DataGrid.Columns>

                <DataGridTextColumn x:Name="suppliersIDColumn" Width="SizeToHeader" Header="Suppliers ID" Binding="{Binding SuppliersID}"/>
                <DataGridTextColumn x:Name="suppliersVideoIDColumn" Width="SizeToHeader" Header="Suppliers Video ID" Binding="{Binding SuppliersVideoID}"/>
                <DataGridTextColumn x:Name="suppliersStoryTitleColumn" Width="SizeToHeader" Header="Suppliers Story Title" Binding="{Binding SuppliersStoryTitle}"/>
                <DataGridTextColumn x:Name="videoNameColumn" Width="SizeToHeader" Header="Video Name" Binding="{Binding VideoName}"/>

                <DataGridTemplateColumn x:Name="startDateColumn" Width="SizeToHeader" Header="Start Date">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding StartDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                </DataGridTemplateColumn>


                <DataGridTextColumn x:Name="createdUserIDColumn" Width="SizeToHeader" Header="Created User ID" Binding="{Binding CreatedUserID}"/>

                <DataGridTemplateColumn x:Name="createdDateColumn" Width="SizeToHeader" Header="Created Date">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding CreatedDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn x:Name="lastUpdateDateColumn" Width="SizeToHeader" Header="Last Update Date">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding LastUpdateDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn x:Name="lastUpdateUserIDColumn" Width="SizeToHeader" Header="Last Update User ID" Binding="{Binding LastUpdateUserID}"/>



                <DataGridTemplateColumn x:Name="endDateColumn" Width="SizeToHeader" Header="End Date">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding EndDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>
